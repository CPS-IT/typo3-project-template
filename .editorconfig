# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# TS/JS-Files
[*.{ts,js,ts.twig,js.twig}]
indent_size = 2

# JSON-Files
[*.{json,json.twig}]
indent_style = tab

# YAML-Files
[*.{yaml,yml,yaml.twig,yml.twig}]
indent_size = 2

# NEON-Files
[*.{neon,neon.twig}]
indent_size = 2
indent_style = tab

# package.json
[{package.json,package.json.twig}]
indent_size = 2

# TypoScript
[*.{typoscript,tsconfig,typoscript.twig,tsconfig.twig}]
indent_size = 2

# XLF-Files
[*.{xlf,xlf.twig}]
indent_style = tab

# SQL-Files
[*.{sql,sql.twig}]
indent_style = tab
indent_size = 2

# .htaccess
[{_.htaccess,.htaccess,_.htaccess.twig,.htaccess.twig}]
indent_style = tab
